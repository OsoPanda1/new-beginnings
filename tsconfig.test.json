{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    /* ðŸ§ª Entorno de pruebas TAMV */
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": true,

    /* Tipos explÃ­citos para pruebas */
    "types": ["jest", "node"],

    /* Permite flexibilidad en tests */
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    /* Mantiene consistencia de casing */
    "forceConsistentCasingInFileNames": true
  },
  "include": ["tests", "**/*.test.ts", "**/*.test.tsx"],
  "exclude": ["node_modules", "dist"]
}
